extends ../layout

block content
    #rspt-main
        .rspt-narrow-content
          h2.rspt-heading.animate-box(data-animate-effect="fadeInLeft") 系列播单
          .row.row-bottom-padded-md
            each item in interview_list_item
              .col-md-3.col-sm-6.col-padding.text-center.animate-box
                a.work.image-popup(href="/interview/detail/#{item._id}", style="background-image: url(#{item.interview_list_poster})")
                    .desc
                        h3 #{item.title}
                        span #{item.info}