extends ../layout

block content
 #rspt-main
  .rspt-narrow-content
    h2.rspt-heading.animate-box(data-animate-effect="fadeInLeft") 节目访谈
    .row.row-bottom-padded-md
     each item in interview_channel
      .col-md-3.col-sm-6.col-padding.animate-box(data-animate-effect="fadeInLeft")
        .blog-entry
          a.blog-img(href="/interview/list/#{item._id}")
            img.img-all(src="#{item.interview_poster}")
          .desc
            h3
              a(href="/interview/list/#{item._id}") #{item.title}
            span
              small  #{item.author}
              small
                i.icon-comment
            p #{item.info}
            a.lead(href="#") Read More
              i.icon-arrow-right3